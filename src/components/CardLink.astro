---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {}

const { ...props } = Astro.props;
---

<a
  {...props}
  class="flex justify-center p-3 rounded bg-zinc-200 shadow-md transition-colors hover:bg-violet-800 hover:text-white"
  target="_blank"
>
  <slot />
</a>
