---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  inverted?: boolean;
}

const { inverted, ...props } = Astro.props;
---

<a
  {...props}
  class=`decoration-2 hover:underline ${inverted ? 'text-violet-800 decoration-black' : 'decoration-violet-800'}`
  ><slot /></a
>
